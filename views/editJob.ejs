<%- include("partials/header") %>

<div class="job-form">
  <h2>Edit Job</h2>
  <form action="/job/<%= job._id %>/edit" method="POST">
    <input type="text" name="title" placeholder="Job Title" value="<%= job.title %>" required />
    <input type="text" name="companyName" placeholder="Company Name" value="<%= job.companyName %>" required />
    <input type="text" name="location" placeholder="Location" value="<%= job.location %>" required />
    <textarea name="description" placeholder="Job Description" required><%= job.description %></textarea>
    <input type="text" name="salary" placeholder="Salary (optional)" value="<%= job.salary %>" />
    <input type="text" name="tags" placeholder="Technologies (comma separated)" value="<%= job.tags.join(', ') %>" />
    <button class="btn" type="submit">Update Job</button>
  </form>
</div>

<%- include("partials/footer") %>
