<%- include('partials/header') %>

<main class="profile-form-container">
  <form class="profile-form" enctype="multipart/form-data" action="/profile/link-user?_method=PATCH" method="POST" >
    <h2>Create Profile</h2>

    <% if (user.role === 'jobseeker') { %>
      <label>Full Name</label>
      <input type="text" name="name" value="<%= user.name %>" required>

      <label>Profile Photo</label>
      <input type="file" name="image" accept="image/*">

      <label>Bio</label>
      <textarea name="bio" rows="3" placeholder="Write something about yourself..."></textarea>

      <label>Education</label>
      <input type="text" name="education" placeholder="e.g., B.Tech in MEC, IIT BHU">

      <label>Skills/Technologies</label>
      <input type="text" name="skills" placeholder="e.g., MERN, Node.js, MongoDB">

      <label>Resume (PDF only)</label>
      <input type="file" name="resume" accept=".pdf">
    <% } else if (user.role === 'recruiter') { %>
      <label>Company Name</label>
      <input type="text" name="companyName" required>

      <label>Company Logo</label>
      <input type="file" name="image" accept="image/*">

      <label>About Company</label>
      <textarea name="bio" rows="3" placeholder="Brief about your company"></textarea>

      <label>Website</label>
      <input type="url" name="website" placeholder="e.g., https://example.com">

      <label>Hiring Domains</label>
      <input type="text" name="domains" placeholder="e.g., Software, Marketing, Finance">
    <% } %>

    <button type="submit" class="btn">Create Profile</button>
  </form>
</main>

<%- include('partials/footer') %>
