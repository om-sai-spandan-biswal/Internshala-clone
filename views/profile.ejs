<%- include('partials/header') %>

<main class="profile-container">
  <div class="profile-card">
    <h2>My Profile</h2>

    <% if (user.role === 'jobseeker') { %>
      <img src="<%= user.image || '/images/default-profile.png' %>" class="profile-photo" alt="Profile Photo">
      <p><strong>Name:</strong> <%= user.name %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Bio:</strong> <%= user.profile.bio || 'N/A' %></p>
      <p><strong>Education:</strong> <%= user.profile.education || 'N/A' %></p>
      <p><strong>Technologies:</strong> <%= user.profile.skills || 'N/A' %></p>
      <p><strong>Resume:</strong> 
        <% if (user.profile.resume) { %>
          <a href="<%= user.profile.resume %>" target="_blank">View Resume</a>
        <% } else { %>
          Not Uploaded
        <% } %>
      </p>
    <% } else if (user.role === 'recruiter') { %>
      <img src="<%= user.images || '/images/default-company.png' %>" class="profile-photo" alt="Company Logo">
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Company:</strong> <%= user.profile.companyName || 'N/A' %></p>
      <p><strong>Website:</strong> 
        <% if (user.profile.website) { %>
          <a href="<%= user.profile.website %>" target="_blank"><%= user.profile.website %></a>
        <% } else { %>
          Not Provided
        <% } %>
      </p>
      <p><strong>About Company:</strong> <%= user.profile.bio || 'N/A' %></p>
      <p><strong>Hiring Domains:</strong> <%= user.profile.domain || 'N/A' %></p>
    <% } %>

    <a href="/profile/edit"><button class="btn edit-btn">Edit Profile</button> </a>
  </div>
</main>

<%- include('partials/footer') %>
