<%- include("partials/header") %>

<div class="job-list">
  <h2>Applicants for: <%= jobTitle %></h2>

  <% if (applicants.length === 0) { %>
    <p>No applicants yet.</p>
  <% } else { %>
    <% applicants.forEach(applicant => { %>
      <div class="job-card">
        <h3><%= applicant.applicant.name %></h3>
        <p><strong>Email:</strong> <%= applicant.applicant.email %></p>
        <a class="btn" href="<%= applicant.resumeLink %>" target="_blank">View Resume</a>
        <a class="btn secondary" href="/profile/<%= applicant.applicant._id %>">View Profile</a>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include("partials/footer") %>
