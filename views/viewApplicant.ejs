<%- include("partials/header") %>

<div class="job-list">
  <h2>Applicants for: <%= jobTitle %></h2>

  <% if (applicants.length === 0) { %>
    <p>No applicants yet.</p>
  <% } else { %>
    <% applicants.forEach(applicant => { %>
      <div class="job-card hover-zone">
        <h3><%= applicant.applicant.name %></h3>
        <p><strong>Email:</strong> <%= applicant.applicant.email %></p>
        <div style="margin: 10px 0;">
          <a class="btn" href="<%= applicant.resume %>" target="_blank">View Resume</a>
          <a class="btn secondary" href="/profile/<%= applicant.applicant._id %>">View Profile</a>
        </div>

        <div class="action-buttons">
          <form method="POST" action="/apply/respond/<%= applicant._id %>" style="display: inline;">
            <button type="submit" name="action" value="accpected" class="btn accept-btn">✅ Accept</button>
          </form>

          <form method="POST" action="/apply/respond/<%= applicant._id %>" style="display: inline; margin-left: 10px;">
            <button type="submit" name="action" value="rejected" class="btn reject-btn">❌ Reject</button>
          </form>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include("partials/footer") %>
